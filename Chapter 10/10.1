#include "pch.h"
#include <iostream>
#include <ctime>
#include <sstream>

using namespace std;

class Clock {
public:
	virtual int getHours();
	int getMinutes();
	string getTime();
protected:
	time_t current_time = time(0);
	tm* local_time = localtime(&current_time);
	int hours = local_time->tm_hour;
	int minutes = local_time->tm_min;
};

int Clock::getHours() {
	return hours;
}

int Clock::getMinutes() {
	return minutes;
}

string Clock::getTime() {
	ostringstream sclock;
	
	sclock << "The current time is: " << getHours() << " hours and " << getMinutes() << " minutes." << endl;

	return sclock.str();
}

class Worldclock : public Clock {
public: 
	Worldclock(int j);
	int getHours();

private:
	int timeOffset;
};

Worldclock::Worldclock(int j) {
	timeOffset = j;
}

int Worldclock::getHours() {
	return (hours + timeOffset);
}

int main()
{
	Clock Clock1;
	Worldclock Clock2(5);

	cout << Clock1.getTime();
	cout << Clock2.getTime();

}

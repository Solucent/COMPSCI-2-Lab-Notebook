#include "pch.h"
#include <iostream>
#include <string>
#include <sstream>

using namespace std;

int main() {

	struct Student {
		string fName, lName, input;
		int quiz[10] = { 0 };
		int grade = 0;
	} student[10];

	for (int i = 0; i < 10; i++) {
		cout << "Please input the first name, last name, and course grade of the student: ";
		getline(cin, student[i].input);

		stringstream ss(student[i].input);

		ss >> student[i].fName;
		ss >> student[i].lName;

		for (int j = 0; j < 10; j++) {
			ss >> student[i].quiz[j];
			student[i].grade = student[i].grade + student[i].quiz[j];
		}
		cout << student[i].fName << student[i].lName << student[i].grade;
	}


	cout << "Grading List:" << endl;
	cout << "A Students:" << endl;
	for (int i = 0; i < 10; i++) {
		if (student[i].grade >= 90) {
			cout << student[i].fName << " " << student[i].lName << endl;
		}
	}
	cout << "B Students:" << endl;
	for (int i = 0; i < 10; i++) {
		if (student[i].grade >= 80) {
			cout << student[i].fName << " " << student[i].lName << endl;
		}
	}
	cout << "C Students:" << endl;
	for (int i = 0; i < 10; i++) {
		if (student[i].grade >= 70) {
			{
				cout << student[i].fName << " " << student[i].lName << endl;
			}
		}
		cout << "D Students:" << endl;
		for (int i = 0; i < 10; i++) {
			if (student[i].grade >= 60) {
				{
					cout << student[i].fName << " " << student[i].lName << endl;
				}
			}
			cout << "F Students:" << endl;
			for (int i = 0; i < 10; i++) {
				if (student[i].grade >= 50) {
					cout << student[i].fName << " " << student[i].lName << endl;
				}
			}
		}
	}
}

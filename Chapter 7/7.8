#include "pch.h"
#include <iostream>
#include <string>
#include <sstream>

using namespace std;

int main() {

	struct Student {
		string fName, lName, input, grade;
		int quiz[10];
	} student[10];

	for (int i = 0; i < 10; i++) {
		cout << "Please input the first name, last name, and course grade of the student: ";
		getline(cin, student[i].input);

		stringstream ss(student[i].input);
		ss >> student[i].fName;
		ss >> student[i].lName;
		ss >> student[i].grade;
	}

	cout << "Grading List:" << endl;
	cout << "A Students:" << endl;
	for (int i = 0; i < 10; i++) {
		if (student[i].grade == "A") {
			cout << student[i].fName << " " << student[i].lName << endl;
		}
	}
	cout << "B Students:" << endl;
	for (int i = 0; i < 10; i++) {
		if (student[i].grade == "B") {
			cout << student[i].fName << " " << student[i].lName << endl;
		}
	}
	cout << "C Students:" << endl;
	for (int i = 0; i < 10; i++) {
		if (student[i].grade == "C") {
			cout << student[i].fName << " " << student[i].lName << endl;
		}
	}
	cout << "D Students:" << endl;
	for (int i = 0; i < 10; i++) {
		if (student[i].grade == "D") {
			cout << student[i].fName << " " << student[i].lName << endl;
		}
	}
	cout << "F Students:" << endl;
	for (int i = 0; i < 10; i++) {
		if (student[i].grade == "F") {
			cout << student[i].fName << " " << student[i].lName << endl;
		}
	}
}


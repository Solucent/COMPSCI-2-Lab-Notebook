#include "pch.h"
#include <iostream>
#include <string>

using namespace std;

int main()
{

	int* users[100];
	int master_account, id, copies, project;
	int project_accounts[10];
	char select;
	bool menu = true;

	master_account = 0;

	for (int i = 0; i < 100; i++)
	{
		users[i] = &master_account;
	}


	while (menu == true) {
		cout << "U)ser A)dministration Q)uit" << endl;
		cin >> select;


		if (select == 'U') {
			cout << "Please enter your User ID and the number of copies you would like: ";
			cin >> id >> copies;
			*users[id] = *users[id] + copies;

			cout << "You have requested " << *users[id] << " copies.";
		}
		else if (select == 'A') {
			cout << "B)alance M)aster P)roject" << endl;
			cin >> select;
			if (select == 'B') {
				cout << "Master Account Balance: " <<  endl << master_account << endl << endl;
				cout << "Project Accounts Balance: ";

				for (int i = 0; i < 10; i++) {
					cout << project_accounts[i] << endl;
				}
			}
			if (select == 'M') {
				cout << "Please enter your User ID: ";
				cin >> id;
				users[id] = &master_account;
			}
			if (select == 'P') {
				cout << "Please enter your User ID: ";
				cin >> id;
				cout << "Please enter your Project number: ";
				cin >> project;
				users[id] = &project_accounts[project];
			}
		}
		else if (select == 'Q') {
			menu = false;
		}

	}
	return 0;
}

